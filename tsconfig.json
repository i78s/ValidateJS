{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "pretty": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test/*Spec.ts"
  ],
  "typeRoots": [
    "node_modules/@types"
  ]
}
